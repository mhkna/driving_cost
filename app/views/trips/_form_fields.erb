<h3>Trip</h3>
<div>
  <div>
    <label for="origin">Origin:</label>
    <br>
    <input type="text" name="trip[origin]" value="<%= @trip.try(:origin) %>">
  </div>
  <div>
    <label for="destination">Destination:</label>
    <br>
    <input type="text" name="trip[destination]" value="<%= @trip.try(:destination) %>">
  </div>
</div>
<h3>Car</h3>
<div>
  <div>
    <label for="car_make">Make:</label>
    <br>
    <input type="text" name="trip[car_make]" value="<%= @trip.try(:car_make) %>">
  </div>
  <div>
    <label for="car_model">Model:</label>
    <br>
    <input type="text" name="trip[car_model]" value="<%= @trip.try(:car_model) %>">
  </div>
  <div>
    <label for="car_year">Year:</label>
    <br>
    <input type="text" name="trip[car_year]" value="<%= @trip.try(:car_year) %>">
  </div>
</div>
